<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diet_for_eyes"
    android:background="@drawable/diet_for_eyes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginBottom="100dp"
        android:fillViewport="true"
        android:layout_marginTop="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part1" />

            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part2" />

            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part3" />

            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part4" />

            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part5" />


            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part6" />
            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part7" />
            <ImageView

                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_margin="15dp"
                android:src="@drawable/frame_4_part8" />

        </LinearLayout>

    </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>