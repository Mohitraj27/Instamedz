<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Diet_heart_care"
    android:background="@drawable/diet_for_healthy_heart">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewFlipper

        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <ImageView

            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_12" />


        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_13" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_14" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_15" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_16" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_17" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_18" />


    </ViewFlipper>
    <ImageView
        android:id="@+id/next_button"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/right_icon" />
    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/left_icon" />
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

