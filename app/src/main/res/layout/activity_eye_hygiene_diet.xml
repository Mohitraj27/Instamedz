<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.ui.Eye_hygiene_diet"

    android:background="@drawable/eye_hygiene">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
<include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true"
        android:layout_marginTop="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

    <ImageView

        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:src="@drawable/frame_5_1st_part" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:src="@drawable/frame_5__1__part2" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:src="@drawable/frame_5__1__part_3" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:src="@drawable/frame_5__1__part4" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:src="@drawable/frame_5__1__part_" />
    </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>

</ScrollView>