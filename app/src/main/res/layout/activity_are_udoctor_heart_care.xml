<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".are_u_doctor_heart_care">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-200dp"

    android:src="@drawable/info_about_impulse_12__1__1st_page"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="-250dp"
        android:src="@drawable/info_about_impulse_12__1__2nd_part"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="100dp"
            android:fillViewport="true"
            android:layout_marginTop="-100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accesories_frame_1" />

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accespries_frame_2" />

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accesories_frame_3" />

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accesories_frame4" />

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accesories_frame_5" />

                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/accesories_frame_6" />
            </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:layout_marginTop="-100dp"

            android:src="@drawable/info_about_impulse_12__1__bottom_part" />

    </LinearLayout>


</ScrollView>