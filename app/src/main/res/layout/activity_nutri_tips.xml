<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nutri_tips"
    android:adjustViewBounds="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbarAlwaysDrawVerticalTrack="true">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

       <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scrollbars="vertical"
                android:src="@drawable/health_tips_nutri" />

            <Button
                android:id="@+id/Nutri_exc_button"

                android:layout_width="203dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="104dp"
                android:layout_marginTop="730dp"
                android:layout_marginEnd="104dp"
                android:text="Learn More" />

            <Button
                android:id="@+id/Nutri_sleep_button"

                android:layout_width="203dp"
                android:layout_height="84dp"
                android:layout_below="@+id/Nutri_exc_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="104dp"
                android:text="Learn More" />

            <Button
                android:id="@+id/Nutri_hydrate_button"

                android:layout_width="203dp"
                android:layout_height="84dp"
                android:layout_below="@+id/Nutri_sleep_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="104dp"
                android:text="Learn More" />

            <Button
                android:id="@+id/Nutri_addiction_button"

                android:layout_width="203dp"
                android:layout_height="84dp"
                android:layout_below="@+id/Nutri_hydrate_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="104dp"
                android:text="Learn More" />

            <Button
                android:id="@+id/Nutri_junk_button"

                android:layout_width="203dp"
                android:layout_height="84dp"
                android:layout_below="@+id/Nutri_addiction_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="520dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="104dp"
                android:text="Learn More" />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>